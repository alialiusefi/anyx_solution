type AggregatedSales {
    datetime: String!,
    sales: String!,
    points: String!
}

type Query {
    getHourlySales(fromDateTime: String!, toDateTime: String!): [AggregatedSales]!
}

type Mutation {
    createSale(price: String!, priceModifier: Float!, paymentMethod: String!, datetime: String!): SaleCreated
}

type SaleCreated {
    finalPrice: String!,
    points: Int!
}
